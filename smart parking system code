#include <xc.h>
#include <stdint.h>

// CONFIGURATION BITS 
#pragma config FOSC = XT        
#pragma config WDTE = OFF       
#pragma config PWRTE = ON       
#pragma config BOREN = ON       
#pragma config LVP = OFF        
#pragma config CPD = OFF        
#pragma config WRT = OFF        
#pragma config CP = OFF         

#define _XTAL_FREQ 4000000  // Define system clock frequency    
#define BAUDRATE 9600  // Define UART communication speed
#define SPBRG_VAL ((_XTAL_FREQ/(64UL*BAUDRATE))-1)

// LCD CONNECTIONS
#define RS RD2
#define EN RD3
#define D4 RD4
#define D5 RD5
#define D6 RD6
#define D7 RD7

//ULTROSONIC CONNECTIONS
#define TRIG_SLOT PORTBbits.RB0
#define ECHO_SLOT PORTBbits.RB1
#define TRIG_GATE PORTBbits.RB2
#define ECHO_GATE PORTBbits.RB3

//SERVO CONECTION
#define SERVO PORTCbits.RC2

//LEDs CONNECTION
#define LED_GREEN PORTCbits.RC4
#define LED_RED   PORTCbits.RC5

// GLOBAL VARIABLES 
unsigned int slot_dist, gate_dist;
unsigned char available_slots = 4;
unsigned char slot_registered = 0;

//UART FUNCTIONS 
void UART_Init(void) {
    TRISCbits.TRISC6 = 0; 
    TRISCbits.TRISC7 = 1; 
    SPBRG = (unsigned char)SPBRG_VAL; // Load the calculated value to set the 9600 baud rate
    TXSTA = 0x24; 
    RCSTA = 0x90; 
}

void UART_Write(char data) {
    while(!TXSTAbits.TRMT); // Wait for the transmit register to be empty
    TXREG = data; // Load data into the register to send it
}

void UART_String(const char *s) {
    while(*s) UART_Write(*s++); // Loops through string
}

// ================= LCD FUNCTIONS =================
void Lcd_Port(char a) {
    D4 = (a & 1) ? 1 : 0;
    D5 = (a & 2) ? 1 : 0;
    D6 = (a & 4) ? 1 : 0;
    D7 = (a & 8) ? 1 : 0;
}

void Lcd_Cmd(char a) {
    RS = 0;             
    Lcd_Port(a >> 4);  //tell LCD we are sending a command 
    EN = 1; __delay_ms(5); EN = 0; // Send High Nibble
    Lcd_Port(a);        
    EN = 1; __delay_ms(5); EN = 0; // Send Low Nibble
}

void Lcd_Init(void) {
    __delay_ms(20);
    Lcd_Cmd(0x03); __delay_ms(5);
    Lcd_Cmd(0x03); __delay_ms(11);
    Lcd_Cmd(0x03);
    Lcd_Cmd(0x02); 
    Lcd_Cmd(0x28); 
    Lcd_Cmd(0x0C); 
    Lcd_Cmd(0x06); 
    Lcd_Cmd(0x01); 
    __delay_ms(5);
}

void Lcd_Write_Char(char a) {
    RS = 1; //tell LCD we are sending a character to display
    Lcd_Port(a >> 4);
    EN = 1; __delay_us(50); EN = 0; // Send High Nibble
    Lcd_Port(a);
    EN = 1; __delay_us(50); EN = 0; // Send Low Nibble
}

void Lcd_Write_String(const char *a) {
    for(int i=0; a[i]!='\0'; i++) Lcd_Write_Char(a[i]);
}

// TIMER1 PERIPHERAL & SENSORS
unsigned int Get_Distance(int sensor) {
    unsigned int time;
    TMR1H = 0; TMR1L = 0; // Reset Timer1 hardware registers to zero
    if(sensor == 1) {
        TRIG_SLOT = 1; __delay_us(10); TRIG_SLOT = 0; // Send 10us pulse to trigger
        while(!ECHO_SLOT);
        T1CONbits.TMR1ON = 1; // Start Timer when echo starts
        while(ECHO_SLOT);
        T1CONbits.TMR1ON = 0; // Stop Timer when echo ends
    } else {
        TRIG_GATE = 1; __delay_us(10); TRIG_GATE = 0;
        while(!ECHO_GATE);
        T1CONbits.TMR1ON = 1;
        while(ECHO_GATE);
        T1CONbits.TMR1ON = 0;
    }
    time = (TMR1H << 8) | TMR1L; // Combine High and Low bytes of Timer1
    return (time / 58);
}

//SERVO CONTROL
void Servo_Open(void) {
    for(int i=0; i<35; i++) {
        SERVO = 1; __delay_us(1500); SERVO = 0; __delay_ms(20); // 1.5ms pulse for 90 deg
    }
}

void Servo_Close(void) {
    for(int i=0; i<35; i++) {
        SERVO = 1; __delay_us(500); SERVO = 0; __delay_ms(20); // 0.5ms pulse for 0 deg
    }
}

void Update_Status_Display(void) {
    Lcd_Cmd(0x01); __delay_ms(5);
    if(available_slots > 0) {
        Lcd_Cmd(0x80);
        Lcd_Write_String("Available: ");
        Lcd_Write_Char(available_slots + '0');
        Lcd_Cmd(0xC0);
        Lcd_Write_String("Gate: Ready");
    } else {
        Lcd_Cmd(0x80);
        Lcd_Write_String("SORRY PARK FULL");
        Lcd_Cmd(0xC0);
        Lcd_Write_String("NO VACANCY");
    }
}

//MAIN SYSTEM 
void main(void) {
    ADCON1 = 0x06; // Configure all pins as Digital instead of Analog
    TRISB = 0x0A;  
    TRISC = 0x80;  
    TRISD = 0x00;  
    PORTB = PORTC = PORTD = 0; // Initialize all ports to low

    T1CON = 0x10; // Configure Timer1 with a 1:2 prescaler 
    UART_Init();
    Lcd_Init();

    // WELCOME MESSAGE
    Lcd_Cmd(0x80);
    Lcd_Write_String("    WELCOME!    ");
    Lcd_Cmd(0xC0);
    Lcd_Write_String(" SMART PARKING ");
    __delay_ms(3000);

    UART_String("System Initialized\r\n");
    Update_Status_Display();

    while(1) {
        // 1. LED MANAGEMENT
        if(available_slots == 0) {
            LED_GREEN = 0;
            // FAST BLINK RED LED
            LED_RED = 1; __delay_ms(100);
            LED_RED = 0; __delay_ms(100);
        } else {
            LED_RED = 0; // Keep red off if parking is available
            
        }

        // SENSOR 1 DETECTION
        slot_dist = Get_Distance(1); 
        if(slot_dist > 2 && slot_dist < 25) { // Check if car is in front of sensor 1
            if(available_slots > 0) {
                if(!slot_registered) {
                    slot_registered = 1;
                    LED_GREEN = 1; // Green ON only when car detected
                    UART_String("OCCUPANCY: Car detected\r\n");
                    Lcd_Cmd(0x01); __delay_ms(5);
                    Lcd_Cmd(0x80);
                    Lcd_Write_String("CAR DETECTED");
                    Lcd_Cmd(0xC0);
                    Lcd_Write_String("PROCEED TO GATE");
                }
            } else {
                // Deny entry if full
                UART_String("ALERT: Park Full, Entry Denied\r\n");
                Lcd_Cmd(0x01);
                Lcd_Write_String("SORRY PARK FULL");
                Lcd_Cmd(0xC0);
                Lcd_Write_String("ACCESS DENIED");
                __delay_ms(1000);
                Update_Status_Display();
            }
        }

        //  SENSOR 2 Gate 
        gate_dist = Get_Distance(2);
        if(gate_dist > 2 && gate_dist < 25 && slot_registered) { // Trigger only if car was registered
            UART_String("GATE: Opening\r\n");
            Lcd_Cmd(0x01); __delay_ms(5);
            Lcd_Cmd(0x80);
            Lcd_Write_String("OPENING GATE...");
            Lcd_Cmd(0xC0);
            Lcd_Write_String("PLEASE WAIT");

            Servo_Open(); // Servo ONLY opens here

            // WAIT FOR CAR TO PASS
            while(Get_Distance(2) < 25) { 
                __delay_ms(50); 
            }

            __delay_ms(1000); 

            Lcd_Cmd(0x01); __delay_ms(5);
            Lcd_Cmd(0x80);
            Lcd_Write_String("CLOSING GATE...");
            
            Servo_Close();

            if(available_slots > 0) available_slots--; // Reduce slot count
            slot_registered = 0; // Reset flags and turn off GreenS
            LED_GREEN = 0; // Green OFF after car enters

            UART_String("GATE: Closed\r\n");
            Update_Status_Display();
        }

        __delay_ms(10); // Loop stability
    }
}
 
